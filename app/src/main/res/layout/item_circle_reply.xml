<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:paddingBottom="5dp"
                android:paddingRight="15dp"
                android:paddingLeft="10dp"
                android:id="@+id/mainRL"
                android:layout_height="match_parent">


    <com.qcjkjg.trafficrules.view.CircleImageView
            android:layout_width="50dp"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:id="@+id/avatarIV"
            android:layout_height="50dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_toRightOf="@+id/avatarIV"
                  android:layout_height="wrap_content">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="40dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_height="wrap_content"
                      android:textColor="#666666"
                      android:text="彼岸花开"
                      android:id="@+id/nameTV"
                      android:textSize="16sp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:textColor="#999999"
                      android:text="9楼"
                      android:id="@+id/numberTV"
                      android:textSize="16sp"/>
        </RelativeLayout>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="话题:全新视觉，简约界面乐享沟通.消息列表支持自由调整，简约体验轻松聊天"
                  android:textSize="14sp"
                  android:visibility="gone"
                  android:padding="5dp"
                  android:id="@+id/replyContentTV"
                  android:layout_marginTop="10dp"
                  android:lineSpacingExtra="5dp"
                  android:background="#f2f2f2"
                  android:textColor="#666666"
                />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="话题:全新视觉，简约界面乐享沟通.消息列表支持自由调整，简约体验轻松聊天"
                  android:textSize="16sp"
                  android:id="@+id/contentTV"
                  android:visibility="gone"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="5dp"
                  android:lineSpacingExtra="5dp"
                  android:textColor="#333333"
                />

        <com.qcjkjg.trafficrules.view.MyGridLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/pictureMGL"
                android:layout_height="match_parent">

        </com.qcjkjg.trafficrules.view.MyGridLayout>


        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="40dp">
            <TextView android:layout_width="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_height="wrap_content"
                      android:textColor="#999999"
                      android:text="20分钟前"
                      android:id="@+id/timeTV"
                      android:textSize="16sp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:textColor="#999999"
                      android:text="回复"
                      android:id="@+id/replyTV"
                      android:textSize="16sp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>