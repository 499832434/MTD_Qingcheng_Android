<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">
        <me.codeboy.android.cycleviewpager.CycleViewPager
                android:id="@+id/cycleViewPager"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="148dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:paddingBottom="10dp"
                      android:paddingTop="10dp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:padding="15dp"
                      android:drawablePadding="5dp"
                      android:drawableTop="@drawable/ic_keyikaogui"
                      android:textColor="#333333"
                      android:text="科一考规"
                      android:id="@+id/ruleTV"
                      android:textSize="16sp"
                      android:gravity="center_horizontal"
                      android:layout_height="match_parent"/>
            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:padding="15dp"
                      android:drawablePadding="5dp"
                      android:id="@+id/questionTV"
                      android:drawableTop="@drawable/ic_datijiqiao"
                      android:textColor="#333333"
                      android:text="答题技巧"
                      android:textSize="16sp"
                      android:gravity="center_horizontal"
                      android:layout_height="match_parent"/>
            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:padding="15dp"
                      android:drawablePadding="5dp"
                      android:id="@+id/aboutTV"
                      android:drawableTop="@drawable/ic_tubiaosuji"
                      android:textColor="#333333"
                      android:text="图标速记"
                      android:textSize="16sp"
                      android:gravity="center_horizontal"
                      android:layout_height="match_parent"/>
        </LinearLayout>
        <View android:layout_width="match_parent"
              android:layout_height="10dp"
              android:background="#F2F2F2"
                />
        <TextView android:layout_width="wrap_content"
                  android:gravity="center_vertical"
                  android:layout_marginLeft="15dp"
                  android:textColor="#999999"
                  android:text="视频学习"
                  android:textSize="18sp"
                  android:layout_height="30dp"/>
        <com.qcjkjg.trafficrules.view.MyListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </com.qcjkjg.trafficrules.view.MyListView>
        <View android:layout_width="match_parent"
              android:layout_height="10dp"
              android:background="#F2F2F2"
                />

        <ImageView android:layout_width="match_parent"
                   android:src="@drawable/img_zhinengyuyin"
                   android:scaleType="centerInside"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:layout_height="48dp"/>

        <TextView android:layout_width="match_parent"
                  android:textColor="#999999"
                  android:text="分享给好友"
                  android:gravity="center"
                  android:textSize="18sp"
                  android:layout_height="30dp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:padding="10dp"
                      android:drawableTop="@drawable/ic_weixin_share"
                      android:textColor="#333333"
                      android:text="微信"
                      android:textSize="14sp"
                      android:gravity="center_horizontal"
                      android:layout_height="match_parent"/>
            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:padding="10dp"
                      android:drawableTop="@drawable/ic_pengyouquan"
                      android:textColor="#333333"
                      android:text="朋友圈"
                      android:textSize="14sp"
                      android:gravity="center_horizontal"
                      android:layout_height="match_parent"/>
            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:padding="10dp"
                      android:drawableTop="@drawable/ic_qq_share"
                      android:textColor="#333333"
                      android:text="QQ"
                      android:textSize="14sp"
                      android:gravity="center_horizontal"
                      android:layout_height="match_parent"/>
            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:padding="10dp"
                      android:drawableTop="@drawable/ic_qqkongjian"
                      android:textColor="#333333"
                      android:text="QQ空间"
                      android:textSize="14sp"
                      android:gravity="center_horizontal"
                      android:layout_height="match_parent"/>
            <TextView android:layout_width="0dp"
                      android:layout_weight="1"
                      android:padding="10dp"
                      android:drawableTop="@drawable/ic_weibo"
                      android:textColor="#333333"
                      android:text="微博"
                      android:textSize="14sp"
                      android:gravity="center_horizontal"
                      android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView android:layout_width="match_parent"
                  android:textColor="#999999"
                  android:text=""
                  android:id="@+id/bottomTV"
                  android:gravity="center"
                  android:layout_marginTop="10dp"
                  android:textSize="18sp"
                  android:layout_height="30dp"/>
    </LinearLayout>

</ScrollView>