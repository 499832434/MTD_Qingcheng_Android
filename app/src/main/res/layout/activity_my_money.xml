<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="#cccccc"
                    android:layout_height="180dp">
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:textColor="#ffffff"
                      android:text="我的奖金(元)"
                      android:layout_below="@+id/accountIV"
                      android:layout_centerHorizontal="true"
                      android:layout_marginTop="15dp"
                      android:textSize="16sp"
                      android:id="@+id/tv1"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:textColor="#ffffff"
                      android:text="100000000000"
                      android:id="@+id/moneyTV"
                      android:textStyle="bold"
                      android:layout_below="@+id/tv1"
                      android:layout_centerHorizontal="true"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      android:textSize="30sp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:textColor="#3fb7f3"
                      android:text="立即提现"
                      android:paddingTop="5dp"
                      android:paddingBottom="5dp"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:background="@drawable/ic_bg_my_money"
                      android:id="@+id/getMoneyTV"
                      android:layout_below="@+id/moneyTV"
                      android:layout_centerHorizontal="true"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      android:textSize="16sp"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView android:layout_width="wrap_content"
                  android:textColor="#ffffff"
                  android:text="帮助"
                  android:layout_marginTop="15dp"
                  android:layout_marginRight="15dp"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentTop="true"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="48dp">
        <View android:layout_width="60dp" 
              android:layout_height="1dp"
              android:layout_toLeftOf="@+id/tv"
              android:layout_centerVertical="true"
              android:background="#999999"/>
        <TextView android:layout_width="wrap_content"
                  android:textColor="#999999"
                  android:text="奖金明细"
                  android:id="@+id/tv"
                  android:layout_centerInParent="true"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:textSize="14sp"
                  android:layout_height="wrap_content"/>
        <View android:layout_width="60dp" 
              android:layout_height="1dp"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@+id/tv"
              android:background="#999999"/>
    </RelativeLayout>
    
    <ListView android:layout_width="match_parent"
              android:id="@+id/moneyLV"
              android:divider="#e1e1e1"
              android:dividerHeight="0.5dp"
              android:layout_height="match_parent">

    </ListView>
</LinearLayout>