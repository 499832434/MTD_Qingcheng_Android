<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_above="@+id/v1"
                  android:layout_height="match_parent">
        <com.qcjkjg.trafficrules.view.CustomTitleBar
                android:id="@+id/customTitleBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                custom:text="设置题库"
                />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="15dp"
                  android:text="学车第一步,选对题库"
                  android:textSize="30sp"
                  android:textColor="#333333"
                  android:gravity="center_horizontal"
                />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="15dp"
                  android:text="科目一共1454题,科目四共1211题"
                  android:textSize="16sp"
                  android:textColor="#999999"
                  android:gravity="center_horizontal"
                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="驾驶证"
                  android:layout_marginBottom="15dp"
                  android:layout_marginTop="15dp"
                  android:textSize="18sp"
                  android:layout_marginLeft="15dp"
                  android:textColor="#333333"/>
        <ScrollView android:layout_width="match_parent"
                    android:scrollbars="none"
                    android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_marginLeft="15dp"
                              android:layout_marginRight="15dp"
                              android:orientation="horizontal"
                              android:layout_height="100dp">
                    <RelativeLayout android:layout_width="0dp"
                                    android:id="@+id/xiaocheRL"
                                    android:background="@drawable/ic_bg_position_n"
                                    android:layout_marginRight="15dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/ic_che"
                                   android:scaleType="centerInside"
                                   android:id="@+id/iv1"
                                   android:layout_centerHorizontal="true"
                                   android:layout_height="60dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="20dp"
                                  android:gravity="center_vertical"
                                  android:layout_centerHorizontal="true"
                                  android:text="小车"
                                  android:layout_below="@+id/iv1"
                                  android:id="@+id/tv1"
                                  android:textSize="14sp"
                                  android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="20dp"
                                  android:gravity="center_vertical"
                                  android:layout_centerHorizontal="true"
                                  android:layout_below="@+id/tv1"
                                  android:text="C1/C2/C3"
                                  android:textSize="14sp"
                                  android:textColor="#666666"/>
                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/ic_close"
                                   android:scaleType="centerInside"
                                   android:visibility="visible"
                                   android:layout_alignParentBottom="true"
                                   android:layout_alignParentRight="true"
                                   android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="0dp"
                                    android:layout_marginRight="15dp"
                                    android:id="@+id/huocheRL"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_bg_position_un"
                                    android:layout_weight="1">
                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/ic_huoche"
                                   android:scaleType="centerInside"
                                   android:id="@+id/iv2"
                                   android:layout_centerHorizontal="true"
                                   android:layout_height="60dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="20dp"
                                  android:gravity="center_vertical"
                                  android:layout_centerHorizontal="true"
                                  android:text="货车"
                                  android:layout_below="@+id/iv2"
                                  android:id="@+id/tv2"
                                  android:textSize="14sp"
                                  android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="20dp"
                                  android:gravity="center_vertical"
                                  android:layout_centerHorizontal="true"
                                  android:layout_below="@+id/tv2"
                                  android:text="A2/B2"
                                  android:textSize="14sp"
                                  android:textColor="#666666"/>
                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/ic_close"
                                   android:scaleType="centerInside"
                                   android:visibility="gone"
                                   android:layout_alignParentBottom="true"
                                   android:layout_alignParentRight="true"
                                   android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_marginLeft="15dp"
                              android:layout_marginRight="15dp"
                              android:layout_marginTop="15dp"
                              android:orientation="horizontal"
                              android:layout_height="100dp">
                    <RelativeLayout android:layout_width="0dp"
                                    android:id="@+id/kecheRL"
                                    android:layout_marginRight="15dp"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_bg_position_un"
                                    android:layout_weight="1">
                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/ic_keche"
                                   android:scaleType="centerInside"
                                   android:id="@+id/iv3"
                                   android:layout_centerHorizontal="true"
                                   android:layout_height="60dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="20dp"
                                  android:gravity="center_vertical"
                                  android:layout_centerHorizontal="true"
                                  android:text="客车"
                                  android:layout_below="@+id/iv3"
                                  android:id="@+id/tv3"
                                  android:textSize="14sp"
                                  android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="20dp"
                                  android:gravity="center_vertical"
                                  android:layout_centerHorizontal="true"
                                  android:layout_below="@+id/tv3"
                                  android:text="A1/A3/B1"
                                  android:textSize="14sp"
                                  android:textColor="#666666"/>
                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/ic_close"
                                   android:scaleType="centerInside"
                                   android:visibility="gone"
                                   android:layout_alignParentBottom="true"
                                   android:layout_alignParentRight="true"
                                   android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="0dp"
                                    android:id="@+id/motuocheRL"
                                    android:layout_marginRight="15dp"
                                    android:background="@drawable/ic_bg_position_un"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/ic_motuo"
                                   android:scaleType="centerInside"
                                   android:id="@+id/iv4"
                                   android:layout_centerHorizontal="true"
                                   android:layout_height="60dp"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="20dp"
                                  android:gravity="center_vertical"
                                  android:layout_centerHorizontal="true"
                                  android:text="摩托车"
                                  android:layout_below="@+id/iv4"
                                  android:id="@+id/tv4"
                                  android:textSize="14sp"
                                  android:textColor="#333333"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="20dp"
                                  android:gravity="center_vertical"
                                  android:layout_centerHorizontal="true"
                                  android:layout_below="@+id/tv4"
                                  android:text="D/E/F"
                                  android:textSize="14sp"
                                  android:textColor="#666666"/>
                        <ImageView android:layout_width="wrap_content"
                                   android:src="@drawable/ic_close"
                                   android:scaleType="centerInside"
                                   android:visibility="gone"
                                   android:layout_alignParentBottom="true"
                                   android:layout_alignParentRight="true"
                                   android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="0.5dp"
          android:background="#e1e1e1"
          android:id="@+id/v1"
          android:layout_above="@+id/commitTV"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="48sp"
              android:id="@+id/commitTV"
              android:textColor="#3fb7f3"
              android:gravity="center"
              android:layout_alignParentBottom="true"
              android:textSize="20sp"
              android:text="确定"/>

</RelativeLayout>