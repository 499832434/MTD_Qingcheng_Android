<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:minHeight="60dp"
                android:id="@+id/mainRL"
                android:layout_height="wrap_content">
    <ImageView android:layout_width="10dp"
               android:layout_centerVertical="true"
               android:id="@+id/circleIV"
               android:layout_marginLeft="15dp"
               android:background="@drawable/ic_bg_blue"
               android:layout_height="10dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="文字题"
              android:id="@+id/subclassNameTV"
              android:layout_toRightOf="@+id/circleIV"
              android:layout_centerVertical="true"
              android:layout_marginLeft="10dp"
              android:textSize="16sp"
              android:textColor="#333333"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="122"
              android:id="@+id/subclassNumTV"
              android:layout_centerVertical="true"
              android:textSize="14sp"
              android:layout_toLeftOf="@+id/V"
              android:layout_marginRight="15dp"
              android:textColor="#999999"/>

    <View android:layout_width="0.5dp"
          android:layout_alignParentRight="true"
          android:id="@+id/V"
          android:layout_centerVertical="true"
          android:background="#e1e1e1"
          android:layout_height="40dp"/>
    <View android:layout_width="match_parent"
          android:layout_alignParentBottom="true"
          android:background="#e1e1e1"
          android:layout_height="0.5dp"/>
</RelativeLayout>