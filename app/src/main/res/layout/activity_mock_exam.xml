<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.qcjkjg.trafficrules.view.CustomTitleBar
            android:id="@+id/customTitleBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            custom:text="模拟考试"
            />

    <com.qcjkjg.trafficrules.view.CircleImageView
            android:layout_width="60dp"
            android:src="@drawable/ic_male"
            android:scaleType="centerInside"
            android:id="@+id/advatarCIV"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="60dp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="点击登录"
              android:visibility="gone"
              android:id="@+id/loginTV"
              android:layout_marginTop="10dp"
              android:textColor="#333333"
              android:textSize="16sp"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="40dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="考试类型"
                  android:gravity="end"
                  android:textColor="#999999"
                  android:textSize="15sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1.5"
                  android:text="小车 C1/C2/C3"
                  android:id="@+id/carTypeTV"
                  android:textColor="#333333"
                  android:layout_marginLeft="20dp"
                  android:textSize="15sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="考试时间"
                  android:gravity="end"
                  android:textColor="#999999"
                  android:textSize="15sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1.5"
                  android:text="45分钟"
                  android:textColor="#333333"
                  android:layout_marginLeft="20dp"
                  android:textSize="15sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="合格标志"
                  android:gravity="end"
                  android:textColor="#999999"
                  android:textSize="15sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1.5"
                  android:text="90分钟"
                  android:textColor="#333333"
                  android:layout_marginLeft="20dp"
                  android:textSize="15sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="出题规则"
                  android:gravity="end"
                  android:textColor="#999999"
                  android:textSize="15sp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:layout_weight="1.5"
                  android:text="根据交管局出题规则"
                  android:textColor="#333333"
                  android:layout_marginLeft="20dp"
                  android:textSize="15sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView android:layout_width="260dp"
              android:layout_height="48dp"
              android:textSize="16sp"
              android:gravity="center"
              android:layout_marginTop="20dp"
              android:layout_gravity="center_horizontal"
              android:textColor="#6bc7f6"
              android:id="@+id/moni1TV"
              android:background="@drawable/ic_bg_mock_g"
              android:text="全真模拟"/>
    <TextView android:layout_width="260dp"
              android:layout_height="48dp"
              android:textSize="16sp"
              android:id="@+id/moni2TV"
              android:gravity="center"
              android:layout_marginTop="10dp"
              android:layout_gravity="center_horizontal"
              android:background="@drawable/ic_bg_mock_b"
              android:textColor="#5dc957"
              android:text="优先选未做题"/>
</LinearLayout>