<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:layout_height="48dp">
        <com.qcjkjg.trafficrules.view.CircleImageView
                android:layout_width="48dp"
                android:scaleType="fitXY"
                android:id="@+id/landlordCIV"
                android:layout_height="48dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:textSize="14sp"
                  android:layout_marginLeft="10dp"
                  android:text="楼主"
                  android:id="@+id/landlordTV"
                  android:textColor="#999999"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="话题:全新视觉，简约界面乐享沟通.消息列表支持自由调整，简约体验轻松聊天"
              android:textSize="16sp"
              android:id="@+id/contentTV"
              android:visibility="gone"
              android:layout_marginRight="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="5dp"
              android:lineSpacingExtra="5dp"
              android:textColor="#333333"
            />

    <com.qcjkjg.trafficrules.view.MyListView
            android:layout_width="match_parent"
            android:id="@+id/pictureLV"
            android:layout_marginTop="10dp"
            android:dividerHeight="30dp"
            android:divider="#00000000"
            android:layout_height="match_parent">
    </com.qcjkjg.trafficrules.view.MyListView>

    <RelativeLayout android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:id="@+id/zanRL"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_height="50dp">
        <com.qcjkjg.trafficrules.view.ApproveListLayout
                android:id="@+id/approveLL"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/zanNumTV"
                android:layout_height="50dp" />
        <TextView android:layout_width="wrap_content"
                  android:text="4人赞过"
                  android:id="@+id/zanNumTV"
                  android:layout_marginLeft="15dp"
                  android:textColor="#999999"
                  android:layout_alignParentRight="true"
                  android:textSize="15sp"
                  android:drawableRight="@drawable/ic_left"
                  android:drawablePadding="10dp"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="40dp">
        <TextView android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"
                  android:textColor="#999999"
                  android:text="20分钟前"
                  android:id="@+id/timeTV"
                  android:textSize="16sp"/>
        <RelativeLayout android:layout_width="wrap_content"
                        android:id="@+id/leaveRL"
                        android:layout_toLeftOf="@+id/fabulousRL"
                        android:layout_height="match_parent">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_comments"
                       android:scaleType="centerInside"
                       android:layout_marginRight="10dp"
                       android:id="@+id/leaveIV"
                       android:layout_centerVertical="true"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_height="wrap_content"
                      android:textColor="#999999"
                      android:id="@+id/leaveTV"
                      android:text="0"
                      android:layout_toRightOf="@+id/leaveIV"
                      android:layout_marginRight="10dp"
                      android:textSize="16sp"/>
        </RelativeLayout>





    <RelativeLayout android:layout_width="wrap_content"
                    android:id="@+id/fabulousRL"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_praise_n"
                   android:id="@+id/fabulousIV"
                   android:scaleType="centerInside"
                   android:layout_marginRight="10dp"
                   android:layout_centerVertical="true"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content"
                  android:textColor="#999999"
                  android:layout_toRightOf="@+id/fabulousIV"
                  android:id="@+id/fabulousTV"
                  android:text="0"
                  android:textSize="16sp"/>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>